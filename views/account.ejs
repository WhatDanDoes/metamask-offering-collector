<% include _partials/head %>
  <body>
    <header>
      <nav>
        <a id="home-link" href="/">
          <img alt="Logo" src="/images/offering-plate.png" height="70">
        </a>
        <ul>
          <li id="connect-metamask">
            <a href="/auth/disconnect">
              <button id="disconnect-metamask-button" type="submit">Disconnect Metamask</button>
            </a>
          </li>
        </ul>
      </nav>
      <br>
      <% include _partials/messages %>
    </header>
    <main>
      <section>
        <form id="account-details" action="/account?_method=PUT" method="post">
          <header>
            <h2>Your Account Details</h2>
          </header>
          <label>Address:</label>
          <input id="address-dummy" type="text" value="<%= agent.publicAddress %>" disabled>
          <label for="name">Name:</label>
          <input type="text" name="name" placeholder="Anonymous" value="<%= agent.name %>">
          <button id="update-account-button" type="submit">Update</button>
        </form>
      </section>
      <section>
        <a href="/">
          <button id="make-a-donation-button">Make a donation</button>
        </a>
      </section>
    </main>
  </body>
</html>
