<% include _partials/head %>
  <body>
    <header>
      <nav>
        <a id="home-link" href="/">
          <img alt="Logo" src="/images/offering-plate.png" height="70">
        </a>
        <ul>
          <li id="connect-metamask">
            <a href="/auth/disconnect">
              <button id="disconnect-metamask-button" type="submit">Disconnect Metamask</button>
            </a>
          </li>
        </ul>
      </nav>
      <br>

      <h1>Tithing History</h1>
      <h4>
        <%= !transactions.length ? 'You have not sent any ETH yet': '' %>
      </h4>
      <br>
      <% include _partials/messages %>
    </header>
    <main>
      <section>
        <table id="transaction-table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Value</th>
              <th>Tx Hash</th>
            </tr>
          </thead>
          <tbody>
            <% for (let tx of transactions) { %>
            <tr>
              <td><%= tx.createdAt %></td>
              <td><%= tx.value %></td>
              <td><%= tx.hash %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </section>
    </main>
  </body>
</html>
