<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="description" content="<%= process.env.TITLE %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= process.env.TITLE %></title>
    <link rel='stylesheet' href='/stylesheets/mvp.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <nav>
        <a id="home-link" href="/"><img alt="Logo" src="https://via.placeholder.com/200x70?text=Logo" height="70"></a>
        <ul>
          <li id="connect-metamask">
            <% if (agent) { %>
              <a href="/disconnect">
                <button id="disconnect-metamask-button" type="submit">Disconnect Metamask</button>
              </a>
            <% } else { %>
              <button id="connect-metamask-button" type="submit">Confirm your identity with Metamask</button>
            <% } %>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <% include _partials/messages %>
      <h1><%= title %></h1>
      <p>Proverbs 3:9-10</p>
    </main>
    <script>
      /**
       * 2021-9-27 Adapted from https://docs.metamask.io/guide/create-dapp.html
       */
      document.addEventListener('DOMContentLoaded', function(event) {
        const connectMetamask = document.getElementById('connect-metamask');

        // Created check function to see if the MetaMask extension is installed
        const isMetaMaskInstalled = () => {
          // Have to check the ethereum binding on the window object to see if it's installed
          const { ethereum } = window;
          return Boolean(ethereum && ethereum.isMetaMask);
        };

        if (isMetaMaskInstalled()) {
          handleIdentification = () => {
            document.getElementById("connect-metamask-button").disabled = true;
            ethereum.request({ method: 'eth_requestAccounts' }).then(accounts => {;

              const account = accounts[0];

              const data = { publicAddress: account };

              // Get nonce for signing
              fetch('/introduce', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
              })
              .then(response => response.json())
              // Sign message
              .then(({ publicAddress, typedData }) => {
                console.log('Sign this nonce:', typedData.message.nonce, '\nWith this public address:', publicAddress);

                return new Promise((resolve, reject) => {
                  ethereum.request({ method: 'eth_signTypedData_v3', params: [publicAddress, JSON.stringify(typedData)] }).then(signed => {
                    console.log('Signed');
                    console.log(signed);

                    const signedData = { publicAddress: publicAddress, signature: signed };

                    // Prove address ownership
                    fetch('/prove', {
                      method: 'POST',
                      headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json',
                      },
                      body: JSON.stringify(signedData),
                    })
                    .then(response => {
                      if(!response.ok) {
                        throw new Error('Could not validate signature');
                      }
                      return response.json()
                    })
                    .then(({ message }) => {
                      console.log(message);

                      connectMetamask.innerHTML = '<a href="/disconnect"><button id="disconnect-metamask-button" type="submit">Disconnect Metamask</button></a>';

                      const messages = document.getElementById('messages');
                      const msgElement = document.createElement('aside');
                      msgElement.className = 'alert alert-success';
                      msgElement.textContent = message;
                      messages.append(msgElement);

                    }).catch(err => {
                      console.error('Error:', err);
                    });
                  }).catch(err => {
                    console.error('Error:', err);
                  });
                });
              }).catch(err => {
                console.error('Error:', err);
              });
            }).catch(err => {
              console.error('Something dreadful happened when accessing your account');
              console.error(err);
            });
          };

          const connectButton = document.getElementById('connect-metamask-button');
          if (connectButton) {
            connectButton.addEventListener('click', handleIdentification);
          }
        }
        else {
          connectMetamask.innerHTML = 'Click here to install the Metamask browser plugin';
        }
      });
    </script>
  </body>
</html>
